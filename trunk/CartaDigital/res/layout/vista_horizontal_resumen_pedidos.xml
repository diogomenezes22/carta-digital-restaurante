<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LavenderBlush"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/Opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/MistyRose"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/IndianRed"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Datos de comanda"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/nPlatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Fecha comanda"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fechaOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LavenderBlush"
                android:gravity="center_horizontal"
                android:text="12/10/2012"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/importe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Hora"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/horaOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LavenderBlush"
                android:gravity="center_horizontal"
                android:text="12:45"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Nº platos"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/nPlatosOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LavenderBlush"
                android:gravity="center_horizontal"
                android:text="8"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Importe comanda"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/importeOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/LavenderBlush"
                android:gravity="center_horizontal"
                android:text="20€"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.55"
                android:onClick="anadirNuevaComanda"
                android:src="@drawable/addl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp" >

                <TextView
                    android:id="@+id/fModificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Tot:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/importeTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0€"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <DigitalClock
                    android:id="@+id/digitalClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="DigitalClock"
                    android:textSize="28sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp" >

        <StackView
            android:id="@+id/stackView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp" >

        </StackView>

    </LinearLayout>

</LinearLayout>