<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comandaLayout"
    android:layout_width="650dp"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/Cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Cant"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Concepto"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Concepto"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Precio"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Total"
                    android:textSize="20sp" />
            </TableRow>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:alpha="0.4"
                android:background="@color/Black"
                android:src="@android:drawable/divider_horizontal_bright" />

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView2cant"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:text="1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2concepto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Filete de pollo al ajillo"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="12"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:text="100.24"
                    android:textSize="20sp" />
            </TableRow>

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/Black"
                android:src="@android:drawable/divider_horizontal_bright"
                android:visibility="gone" />
        </TableLayout>
    </LinearLayout>

</LinearLayout>